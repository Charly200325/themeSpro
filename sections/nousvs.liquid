{% style %}
.difference-section {
  background: linear-gradient(135deg, #966A52, #7E5B45);
  color: white;
  padding: 60px 20px;
  font-family: 'Hanken Grotesk', sans-serif;
  text-align: center;
}

.difference-section h2 {
  font-size: 32px;
  margin-bottom: 40px;
  font-weight: 500;
}

.difference-grid {
  display: flex;
  justify-content: center;
  gap: 40px;
  flex-wrap: wrap;
  max-width: 1200px;
  margin: 0 auto;
}

.benefit-card {
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 10px;
  padding: 24px;
  width: 320px;
  text-align: center;
}

.benefit-card h4 {
  font-size: 14px;
  font-weight: 700;
  margin-bottom: 8px;
}

.benefit-card p {
  font-size: 14px;
  line-height: 1.4;
}

.comparison-table {
  width: 100%;
  max-width: 900px;
  margin: 50px auto 0;
  border-collapse: collapse;
  background: white;
  border-radius: 12px;
  overflow: hidden;
  text-align: left;
}

.comparison-table thead th {
  background: transparent;
  color: #fff;
  padding: 16px;
  font-weight: 600;
  text-align: center;
  font-size: 14px;
}

.comparison-table td,
.comparison-table th {
  padding: 16px;
  border-bottom: 1px solid #eee;
  font-size: 14px;
  color: #333;
}

.comparison-table tbody td:first-child {
  font-weight: 700;
  color: #5C4536;
  width: 40%;
}

.comparison-table tbody td span {
  font-weight: 400;
  display: block;
  font-style: italic;
  color: #666;
}

.comparison-table .brand-column {
  background-color: #F1E3D6;
  text-align: center;
  vertical-align: middle;
  width: 110px;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
}

.comparison-table img.logo {
  max-height: 36px;
}

.checkmark {
  color: #5C4536;
  font-size: 20px;
}

.crossmark {
  color: #bbb;
  font-size: 20px;
}

@media (max-width: 768px) {
  .difference-grid {
    flex-direction: column;
    align-items: center;
  }

  .comparison-table thead {
    display: none;
  }

  .comparison-table, .comparison-table tbody, .comparison-table tr, .comparison-table td {
    display: block;
    width: 100%;
  }

  .comparison-table td {
    text-align: center;
    padding: 12px 16px;
    border-bottom: 1px solid #eee;
  }

  .comparison-table td:first-child {
    background: #fdfaf8;
  }

  .comparison-table .brand-column {
    border: none;
  }
}
{% endstyle %}

