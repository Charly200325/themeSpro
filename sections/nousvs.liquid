{% style %}
.difference-section {
  background: linear-gradient(45deg, #9b6b50, #805f4e);
  padding: 60px 20px;
  color: white;
  font-family: 'Hanken Grotesk', sans-serif;
}

.difference-wrapper {
  max-width: 1300px;
  margin: 0 auto;
  display: flex;
  gap: 40px;
  justify-content: space-between;
  flex-wrap: wrap;
}

.reassurance {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 30px;
}

.reassurance-box {
  background-color: #b78c6a;
  border-radius: 10px;
  padding: 20px;
  text-align: center;
  color: white;
}

.reassurance-box img {
  width: 54px;
  margin-bottom: 10px;
}

.reassurance-box h4 {
  font-weight: bold;
  font-size: 14px;
  margin-bottom: 8px;
  text-transform: uppercase;
}

.reassurance-box p {
  font-size: 14px;
  color: #fefefe;
}

.comparison {
  flex: 2;
  background: white;
  border-radius: 12px;
  overflow: hidden;
  font-size: 14px;
  color: #4e4e4e;
}

.comparison-title {
  text-align: center;
  font-size: 28px;
  margin-bottom: 40px;
  font-weight: 500;
  color: white;
}

.comparison-table {
  width: 100%;
  border-collapse: collapse;
}

.comparison-table td, .comparison-table th {
  border-bottom: 1px solid #e0e0e0;
  padding: 20px;
  vertical-align: middle;
  text-align: center;
}

.comparison-table td:first-child {
  text-align: left;
  font-weight: bold;
  color: #333;
}

.comparison-table td:first-child span {
  display: block;
  font-weight: normal;
  color: #777;
  font-style: italic;
  margin-top: 4px;
}

.comparison-brand {
  background-color: #e6d5c8;
  border-radius: 12px 12px 0 0;
  font-weight: bold;
}

.comparison-logo {
  background-color: #e6d5c8;
  border-radius: 0 0 12px 12px;
  padding: 10px 0;
}

.comparison-logo img {
  width: 80px;
  height: auto;
  display: block;
  margin: 0 auto;
}

.check-icon, .cross-icon {
  font-size: 18px;
  display: inline-block;
  width: 28px;
  height: 28px;
  line-height: 28px;
  border-radius: 50%;
  background-color: #eee;
  color: #333;
}

.check-icon {
  background-color: #d6c0ae;
}

.cross-icon {
  background-color: #f0f0f0;
}

@media (max-width: 768px) {
  .difference-wrapper {
    flex-direction: column;
    align-items: center;
  }

  .comparison-title {
    font-size: 24px;
  }

  .comparison-table td, .comparison-table th {
    font-size: 13px;
    padding: 12px;
  }
}
{% endstyle %}

