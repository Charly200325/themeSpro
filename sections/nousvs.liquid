{% schema %}
{
  "name": "Comparison Table",
  "tag": "section",
  "class": "comparison-section",
  "settings": [],
  "presets": [
    {
      "name": "Comparison Table"
    }
  ]
}
{% endschema %}

<style>
.comparison-table-wrapper {
  background: #AB9381;
  padding: 40px 20px;
  font-family: 'Hanken Grotesk', sans-serif;
}
.comparison-title {
  text-align: center;
  color: #fff;
  font-size: 28px;
  font-weight: 400;
  margin-bottom: 40px;
}
.comparison-grid {
  display: grid;
  grid-template-columns: minmax(0, 6fr) minmax(0, 3.2fr) minmax(0, 2.8fr);
  background: #fff;
  border-radius: 13px;
  overflow: hidden;
}
.comparison-row {
  display: contents;
}
.comparison-cell {
  padding: 20px;
  border-bottom: 1px solid #D5C3B5;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: left;
  font-size: 15px;
  line-height: 1.4;
}
.comparison-cell.left {
  text-align: left;
  align-items: flex-start;
  flex-direction: column;
}
.comparison-cell span {
  display: block;
}
.comparison-cell strong {
  font-weight: 700;
}
.comparison-check,
.comparison-cross {
  font-size: 20px;
}
.comparison-check {
  color: #6C5B4C;
}
.comparison-cross {
  color: #BBB;
}
.comparison-brand-logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.comparison-brand-logo img {
  width: 90px;
  margin-bottom: 10px;
}
@media (max-width: 768px) {
  .comparison-grid {
    grid-template-columns: 1fr 1fr 1fr;
  }
  .comparison-title {
    font-size: 22px;
  }
  .comparison-cell {
    padding: 14px;
    font-size: 13px;
  }
}
</style>

<div class="comparison-table-wrapper">
  <h2 class="comparison-title">Here’s How We Are Different</h2>
  <div class="comparison-grid">
    <div class="comparison-row">
      <div class="comparison-cell left">
        <strong>SEAMLESS FINISH</strong>
        <span>Invisible coverage</span>
      </div>
      <div class="comparison-cell comparison-brand-logo">
        <img src="https://cdn.shopify.com/s/files/1/0964/4130/3378/files/a6e1083b-fde6-4333-a241-15b664c8c320_removalai_preview.png?v=1747258252" alt="Splendor logo">
        <div class="comparison-check">✓</div>
      </div>
      <div class="comparison-cell"><span class="comparison-cross">✗</span></div>
    </div>

    {% assign rows = 
      "DEEP HYDRATION|HA+ Technology,
       ETHICAL BEAUTY|Ethically sourced,
       NON-COMEDOGENIC|Won’t clog pores,
       ENDURING WEAR|Stays flawless all day,
       CRUELTY-FREE & VEGAN|No animal testing,
       NO HARSH CHEMICALS|Free from parabens" | split: "," %}

    {% for row in rows %}
      {% assign parts = row | split: "|" %}
      <div class="comparison-row">
        <div class="comparison-cell left">
          <strong>{{ parts[0] }}</strong>
          <span>{{ parts[1] }}</span>
        </div>
        <div class="comparison-cell"><span class="comparison-check">✓</span></div>
        <div class="comparison-cell"><span class="comparison-cross">✗</span></div>
      </div>
    {% endfor %}
  </div>
</div>
