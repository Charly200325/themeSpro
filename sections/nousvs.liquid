{% schema %}
{
  "name": "Comparison Table",
  "tag": "section",
  "class": "comparison-section",
  "settings": [],
  "presets": [
    {
      "name": "Comparison Table"
    }
  ]
}
{% endschema %}

{% style %}
.comparison-section {
  font-family: 'Hanken Grotesk', sans-serif;
  background-color: #F9F0E7;
  padding: 60px 20px;
}

.comparison-table {
  display: grid;
  grid-template-columns: minmax(0, 6fr) minmax(0, 3.2fr) minmax(0, 2.8fr);
  max-width: 800px;
  margin: 0 auto;
  border-radius: 13px;
  overflow: hidden;
  box-shadow: 0 0 13px rgba(187, 187, 187, 0.25);
}

.comparison-row {
  display: contents;
}

.comparison-cell {
  background-color: white;
  padding: 18px 16px;
  border-bottom: 1px solid #D5C3B5;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.comparison-cell.logo {
  justify-content: center;
  padding: 14px 0;
  background-color: transparent;
}

.comparison-cell.logo img {
  width: 85px;
  border-radius: 9999px;
}

.comparison-cell h6 {
  margin: 0;
  font-size: 15px;
  color: #8F7C6D;
  font-weight: 800;
  text-transform: uppercase;
}

.comparison-cell p {
  margin: 0;
  font-size: 16px;
  color: #756E67;
}

.comparison-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.comparison-icon img {
  width: 30px;
  height: auto;
  border-radius: 9999px;
}

@media (max-width: 768px) {
  .comparison-table {
    grid-template-columns: minmax(0, 6fr) minmax(0, 3fr) minmax(0, 3fr);
  }

  .comparison-cell h6 {
    font-size: 12px;
  }

  .comparison-cell p {
    font-size: 14px;
  }

  .comparison-icon img {
    width: 26px;
  }

  .comparison-cell.logo img {
    width: 74px;
  }
}
{% endstyle %}

