{% schema %}
{
  "name": "ComparisonTable-Spl",
  "tag": "section",
  "class": "comparison-section",
  "settings": [],
  "presets": [
    {
      "name": "Comparison Table"
    }
  ]
}
{% endschema %}

{% style %}
.comparison-section {
  background: linear-gradient(270deg, #946E57 0%, #A57B60 100%);
  padding: 60px 20px;
  font-family: 'Hanken Grotesk', sans-serif;
  color: white;
  text-align: center;
}

.comparison-section h2 {
  font-size: 32px;
  margin-bottom: 40px;
  color: #fff4ec;
}

.comparison-wrapper {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 40px;
  max-width: 1200px;
  margin: 0 auto;
}

.comparison-benefits {
  display: flex;
  flex-direction: column;
  gap: 20px;
  max-width: 400px;
}

.benefit-box {
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 12px;
  padding: 20px;
  text-align: left;
}

.benefit-box img {
  width: 40px;
  margin-bottom: 10px;
}

.benefit-title {
  font-weight: 700;
  margin-bottom: 8px;
}

.benefit-desc {
  font-size: 14px;
  color: #fff;
}

.comparison-table {
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
  width: 100%;
  max-width: 600px;
}

.comparison-header {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  background-color: #fff;
  font-weight: 600;
  padding: 16px;
  color: #7B5C49;
  position: relative;
}

.comparison-header .logo-col {
  background-color: #F2E2D5;
  border-radius: 0 0 16px 16px;
  padding: 10px;
  position: absolute;
  top: -40px;
  left: 33.3%;
  width: 33.3%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}

.comparison-header .logo-col img {
  height: 30px;
}

.comparison-row {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  padding: 16px;
  border-top: 1px solid #ddd;
  color: #333;
  background-color: #fff;
  font-size: 14px;
}

.comparison-row:nth-child(even) {
  background-color: #fafafa;
}

.check-icon {
  color: #7B5C49;
  font-weight: bold;
}

.cross-icon {
  color: #aaa;
}

@media (max-width: 768px) {
  .comparison-wrapper {
    flex-direction: column;
    gap: 40px;
  }

  .comparison-header {
    font-size: 14px;
  }

  .comparison-row {
    font-size: 13px;
    padding: 12px;
  }

  .comparison-header .logo-col {
    left: 33%;
    width: 34%;
  }
}
{% endstyle %}

<div class="comparison-section">
  <h2>Here’s How We Are Different</h2>
  <div class="comparison-wrapper">
    <div class="comparison-benefits">
      <div class="benefit-box">
        <img src="https://cdn.shopify.com/s/files/1/0964/4130/3378/files/shipping-icon.png" alt="Shipping">
        <div class="benefit-title">FREE SHIPPING OVER $50</div>
        <div class="benefit-desc">Enjoy complimentary shipping on all orders over $50—delivered right to your doorstep.</div>
      </div>
      <div class="benefit-box">
        <img src="https://cdn.shopify.com/s/files/1/0964/4130/3378/files/return-icon.png" alt="Returns">
        <div class="benefit-title">EASY RETURNS</div>
        <div class="benefit-desc">Not satisfied? Our easy returns ensure you’re covered, shop with confidence.</div>
      </div>
      <div class="benefit-box">
        <img src="https://cdn.shopify.com/s/files/1/0964/4130/3378/files/stars-icon.png" alt="Units Sold">
        <div class="benefit-title">OVER 50,000+ UNITS SOLD</div>
        <div class="benefit-desc">Join thousands who have chosen Splendor for flawless, natural coverage.</div>
      </div>
    </div>

    <div class="comparison-table">
      <div class="comparison-header">
        <div> </div>
        <div class="logo-col">
          <img src="https://cdn.shopify.com/s/files/1/0964/4130/3378/files/a6e1083b-fde6-4333-a241-15b664c8c320_removalai_preview.png?v=1747258252" alt="Splendor">
        </div>
        <div>Other Brands</div>
      </div>

      {% assign features = 
        "SEAMLESS FINISH|Invisible coverage,
         DEEP HYDRATION|HA+ Technology,
         ETHICAL BEAUTY|Ethically sourced,
         NON-COMEDOGENIC|Won’t clog pores,
         ENDURING WEAR|Stays flawless all day,
         CRUELTY-FREE & VEGAN|No animal testing,
         NO HARSH CHEMICALS|Free from parabens" | split: ',' %}

      {% for feature in features %}
        {% assign parts = feature | split: '|' %}
        <div class="comparison-row">
          <div><strong>{{ parts[0] }}</strong><br><em>{{ parts[1] }}</em></div>
          <div class="check-icon">✓</div>
          <div class="cross-icon">✕</div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
