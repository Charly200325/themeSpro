{% schema %}
{
  "name": "Skin Boosting Ingredients",
  "tag": "section",
  "class": "ingredients-section",
  "settings": [],
  "blocks": [
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Ingredient Image"
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Badge Text (e.g. âœ“ Hydration)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Ingredient Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Ingredient Description"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Skin Boosting Ingredients",
      "blocks": []
    }
  ]
}
{% endschema %}

{% style %}
.ingredients-section {
  font-family: 'Hanken Grotesk', sans-serif;
  background-color: #fff;
  padding: 10px 20px 20px;
  text-align: center;
  position: relative;
}

.ingredients-section h2 {
  font-size: 60px;
  color: #27201A;
  font-weight: 600;
  margin: 0 0 4px;
}

.ingredients-section h3 {
  font-size: 36px;
  color: #27201A;
  font-weight: 600;
  margin-bottom: 30px;
  margin-top: 0;
}

.ingredient-scroll-wrapper {
  overflow: hidden;
  position: relative;
}

.ingredient-carousel {
  display: flex;
  gap: 24px;
  overflow-x: auto;
  scroll-behavior: smooth;
  padding-bottom: 10px;
  margin: 0 auto;
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.ingredient-carousel::-webkit-scrollbar {
  display: none;
}

.ingredient-slide {
  background: white;
  border-radius: 20px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
  overflow: hidden;
  text-align: left;
  flex-shrink: 0;
  width: 380px;
  scroll-snap-align: start;
}

.ingredient-image {
  position: relative;
}

.ingredient-image img {
  width: 100%;
  height: auto;
  display: block;
}

.ingredient-badge {
  position: absolute;
  bottom: 10px;
  left: 10px;
  background: white;
  color: #27201A;
  font-size: 14px;
  font-weight: 500;
  border-radius: 999px;
  padding: 4px 12px;
  box-shadow: 0 1px 4px rgba(0,0,0,0.1);
  white-space: nowrap;
}

.ingredient-content {
  padding: 20px;
}

.ingredient-content h4 {
  font-size: 16px;
  font-weight: 700;
  color: #C7A68C;
  margin: 0 0 8px;
}

.ingredient-content p {
  font-size: 14px;
  color: #555;
  margin: 0;
  line-height: 1.4;
}

.arrow-buttons {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-top: 30px;
}

.arrow-buttons button {
  background: white;
  border: 1px solid #bfb2a3;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  cursor: pointer;
}

@media (max-width: 768px) {
  .ingredient-slide {
    width: 85%;
  }
}
{% endstyle %}


<div class="ingredients-section">
  <h2>8</h2>
  <h3>Skin-Boosting Ingredients</h3>

  <div class="ingredient-scroll-wrapper">
    <div class="ingredient-carousel" id="ingredient-carousel">
      {% for block in section.blocks %}
        <div class="ingredient-slide">
          <div class="ingredient-image">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url: width: 500 }}" alt="{{ block.settings.title }}">
            {% endif %}
            {% if block.settings.badge %}
              <div class="ingredient-badge">{{ block.settings.badge }}</div>
            {% endif %}
          </div>
          <div class="ingredient-content">
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
      {% for block in section.blocks %}
        <div class="ingredient-slide">
          <div class="ingredient-image">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url: width: 500 }}" alt="{{ block.settings.title }}">
            {% endif %}
            {% if block.settings.badge %}
              <div class="ingredient-badge">{{ block.settings.badge }}</div>
            {% endif %}
          </div>
          <div class="ingredient-content">
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="arrow-buttons">
    <button onclick="scrollIngredientCarousel(-1)" aria-label="Scroll left">&larr;</button>
    <button onclick="scrollIngredientCarousel(1)" aria-label="Scroll right">&rarr;</button>
  </div>
</div>


<script>
  function scrollIngredientCarousel(direction) {
    const container = document.getElementById('ingredient-carousel');
    const slide = container.querySelector('.ingredient-slide');
    if (slide) {
      const slideWidth = slide.offsetWidth + 24;
      container.scrollBy({ left: direction * slideWidth, behavior: 'smooth' });
    }
  }
</script>
