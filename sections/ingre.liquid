{% schema %}
{
  "name": "Skin Boosting Ingredients",
  "tag": "section",
  "class": "ingredients-section",
  "settings": [],
  "blocks": [
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Ingredient Image"
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Badge Text (e.g. ✓ Hydration)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Ingredient Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Ingredient Description"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Skin Boosting Ingredients",
      "blocks": []
    }
  ]
}
{% endschema %}

{% style %}
.ingredients-section {
  font-family: 'Hanken Grotesk', sans-serif;
  background-color: #fff;
  padding: 60px 20px;
  text-align: center;
}

.ingredients-section h2 {
  font-size: 18px;
  color: #27201A;
  font-weight: 500;
  margin: 0;
}

.ingredients-section h3 {
  font-size: 32px;
  color: #27201A;
  font-weight: 600;
  margin-bottom: 40px;
}

.swiper {
  padding-bottom: 50px;
}

.swiper-slide {
  background: white;
  border-radius: 20px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
  overflow: hidden;
  text-align: left;
  max-width: 340px;
}

.ingredient-image {
  position: relative;
}

.ingredient-image img {
  width: 100%;
  height: auto;
  display: block;
}

.badge {
  position: absolute;
  bottom: 10px;
  left: 10px;
  background: white;
  color: #27201A;
  font-size: 14px;
  font-weight: 500;
  border-radius: 999px;
  padding: 4px 12px;
  box-shadow: 0 1px 4px rgba(0,0,0,0.1);
}

.ingredient-content {
  padding: 20px;
}

.ingredient-content h4 {
  font-size: 16px;
  font-weight: 700;
  color: #AB9381;
  margin: 0 0 8px;
}

.ingredient-content p {
  font-size: 14px;
  color: #555;
  margin: 0;
  line-height: 1.4;
}

.swiper-button-prev,
.swiper-button-next {
  color: #C39F83;
  top: auto;
  bottom: 0;
  transform: translateY(50%);
  width: auto;
}

.swiper-pagination {
  bottom: 0 !important;
}

@media (min-width: 768px) {
  .swiper-slide {
    max-width: 280px;
  }
}
{% endstyle %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function () {
  if (window.Swiper) {
    new Swiper('.swiper-container-ingredients', {
      slidesPerView: 'auto',
      spaceBetween: 20,
      loop: false,
      pagination: {
        el: '.swiper-pagination',
        clickable: true
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev'
      },
      breakpoints: {
        768: {
          slidesPerView: 3
        }
      }
    });
  }
});
{% endjavascript %}

<div class="ingredients-section">
  <h2>8</h2>
  <h3>Skin-Boosting Ingredients</h3>

  <div class="swiper swiper-container-ingredients">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="ingredient-image">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url: width: 500 }}" alt="{{ block.settings.title }}">
            {% endif %}
            {% if block.settings.badge != blank %}
              <div class="badge">{{ block.settings.badge }}</div>
            {% endif %}
          </div>
          <div class="ingredient-content">
            {% if block.settings.title != blank %}
              <h4>{{ block.settings.title }}</h4>
            {% endif %}
            {% if block.settings.description != blank %}
              <p>{{ block.settings.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="swiper-button-prev">←</div>
    <div class="swiper-button-next">→</div>
    <div class="swiper-pagination"></div>
  </div>
</div>
