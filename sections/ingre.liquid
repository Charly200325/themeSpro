{% schema %}
{
  "name": "Skin Boosting Ingredients",
  "tag": "section",
  "class": "ingredients-section",
  "settings": [],
  "blocks": [
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Ingredient Image"
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Badge Text (e.g. âœ“ Hydration)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Ingredient Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Ingredient Description"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Skin Boosting Ingredients",
      "blocks": []
    }
  ]
}
{% endschema %}

{% style %}
.ingredients-section {
  font-family: 'Hanken Grotesk', sans-serif;
  background-color: #fff;
  padding: 60px 20px;
  text-align: center;
}

.ingredients-section h2 {
  font-size: 18px;
  color: #27201A;
  font-weight: 500;
  margin: 0;
}

.ingredients-section h3 {
  font-size: 32px;
  color: #27201A;
  font-weight: 600;
  margin-bottom: 40px;
}

.swiper-container-ingredients {
  overflow-x: auto;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
  scroll-snap-type: x mandatory;
  display: flex;
  gap: 20px;
  padding-bottom: 20px;
}

.swiper-slide {
  background: white;
  border-radius: 20px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
  overflow: hidden;
  text-align: left;
  flex-shrink: 0;
  width: 250px;
  display: inline-block;
  scroll-snap-align: start;
}

.ingredient-image {
  position: relative;
}

.ingredient-image img {
  width: 100%;
  height: auto;
  display: block;
}

.badge {
  position: absolute;
  bottom: 10px;
  left: 10px;
  background: white;
  color: #27201A;
  font-size: 14px;
  font-weight: 500;
  border-radius: 999px;
  padding: 4px 12px;
  box-shadow: 0 1px 4px rgba(0,0,0,0.1);
}

.ingredient-content {
  padding: 20px;
}

.ingredient-content h4 {
  font-size: 16px;
  font-weight: 700;
  color: #AB9381;
  margin: 0 0 8px;
}

.ingredient-content p {
  font-size: 14px;
  color: #555;
  margin: 0;
  line-height: 1.4;
}

@media (max-width: 768px) {
  .swiper-slide {
    width: 85%;
  }
}
{% endstyle %}

<div class="ingredients-section">
  <h2>8</h2>
  <h3>Skin-Boosting Ingredients</h3>

  <div class="swiper-container-ingredients">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        <div class="ingredient-image">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url: width: 500 }}" alt="{{ block.settings.title }}">
          {% endif %}
          {% if block.settings.badge %}
            <div class="badge">{{ block.settings.badge }}</div>
          {% endif %}
        </div>
        <div class="ingredient-content">
          <h4>{{ block.settings.title }}</h4>
          <p>{{ block.settings.description }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>