{% schema %}
{
  "name": "See It In Action",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "See It In Action"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "No filters, no heavy layers—just natural coverage that lets your skin shine through."
    }
  ],
  "blocks": [
    {
      "type": "video_slide",
      "name": "Video Slide",
      "settings": [
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL"
        },
        {
          "type": "text",
          "id": "quote",
          "label": "Quote"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "See It In Action",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="see-it-section">
  <div class="container">

    <div class="stars-wrapper">
      <div data-id="gqvrfLD0cN" role="presentation" class="gp-group/image gqvrfLD0cN gp-flex-none gp-h-auto mobile:gp-flex-none mobile:gp-h-auto tablet:gp-flex-none tablet:gp-h-auto" style="--mb:7px;--d:block;--d-tablet:block;--d-mobile:block;--bs:none;--bw:1px 1px 1px 1px;--bc:#121212;--shadow:none;--op:100%;--ta:center">
        <div class="pointer-events-auto gp-h-full gp-flex" style="--shadow:none;border-radius:inherit;--jc:center">
          <picture style="border-radius: inherit" class="gp-contents">
            <source media="(max-width: 767px)" srcset="//splendorintl.com/cdn/shop/files/gempages_534627086933951483-ea424bf2-b1fd-4103-bffe-8dc79661842b.webp?v=9863142413917065072">
            <source media="(max-width: 1024px)" srcset="//splendorintl.com/cdn/shop/files/gempages_534627086933951483-ea424bf2-b1fd-4103-bffe-8dc79661842b.webp?v=9863142413917065072">
            <img class="gp-h-full gp-max-w-full gp-flex stars-img-fixed stars-spacing" src="//splendorintl.com/cdn/shop/files/gempages_534627086933951483-ea424bf2-b1fd-4103-bffe-8dc79661842b.webp?v=9863142413917065072" width="100%" alt="">
          </picture>
        </div>
      </div>
    </div>

    <h2 class="title">{{ section.settings.title }}</h2>
    <p class="subtitle">{{ section.settings.subtitle }}</p>

    <div class="video-slider">
      {% for block in section.blocks %}
        <div class="slide">
          <div class="video-wrapper">
            <video controls muted playsinline>
              <source src="{{ block.settings.video_url }}" type="video/mp4">
            </video>
          </div>
          <p class="quote">&ldquo;{{ block.settings.quote }}&rdquo;</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.see-it-section {
  background-color: #fdf2e8;
  padding: 30px 20px;
  text-align: center;
  font-family: 'Hanken Grotesk', sans-serif;
}
.see-it-section .title {
  font-size: 26px;
  margin-top: 0;
  margin-bottom: 6px;
}
.see-it-section .subtitle {
  font-size: 15px;
  color: #5a463d;
  margin-bottom: 0px;
}
.video-slider {
  display: flex;
  gap: 20px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
}
.slide {
  background: white;
  border-radius: 12px;
  padding: 15px;
  width: 280px;
  flex: 0 0 auto;
  scroll-snap-align: start;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
}
.video-wrapper {
  border-radius: 8px;
  overflow: hidden;
  margin-bottom: 10px;
}
.video-wrapper video {
  width: 100%;
  height: auto;
  display: block;
}
.quote {
  font-style: italic;
  font-size: 14px;
  color: #5a463d;
}

/* Responsive */
@media (max-width: 768px) {
  .video-slider {
    padding-bottom: 10px;
  }
  .slide {
    width: 75%;
    margin-right: 10px;
  }
}

/* Taille responsive des étoiles */
.stars-img-fixed {
  width: 113px !important;
  height: auto;
}
@media (max-width: 1024px) {
  .stars-img-fixed {
    width: 93px !important;
  }
}
@media (max-width: 768px) {
  .stars-img-fixed {
    width: 73px !important;
  }
}

/* Espacement réduit sous les étoiles */
.stars-spacing {
  margin-bottom: 6px !important;
  display: block;
}

/* Centrer bloc étoiles */
.stars-wrapper {
  display: flex;
  justify-content: center;
}
</style>
