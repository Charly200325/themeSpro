<section class="see-it-section">
  <div class="container">

    <!-- Étoiles centrées -->
    <div class="stars-wrapper">
      <img
        class="stars-img-fixed"
        src="//splendorintl.com/cdn/shop/files/gempages_534627086933951483-ea424bf2-b1fd-4103-bffe-8dc79661842b.webp?v=9863142413917065072"
        alt="Stars"
      >
    </div>

    <!-- Titre + Sous-titre -->
    <h2 class="title">{{ section.settings.title }}</h2>
    <p class="subtitle">{{ section.settings.subtitle }}</p>

    <!-- Slider vidéo -->
    <div class="video-slider">
      {% for block in section.blocks %}
        <div class="slide">
          <div class="video-wrapper">
            <video controls muted playsinline>
              <source src="{{ block.settings.video_url }}" type="video/mp4">
            </video>
          </div>
          <p class="quote">&ldquo;{{ block.settings.quote }}&rdquo;</p>
        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
.see-it-section {
  background-color: #fdf2e8;
  padding: 30px 20px;
  text-align: center;
  font-family: 'Hanken Grotesk', sans-serif;
}

/* Étoiles centrées */
.stars-wrapper {
  display: flex;
  justify-content: center;
  margin-bottom: 6px;
}
.stars-img-fixed {
  width: 113px !important;
  height: auto;
}
@media (max-width: 1024px) {
  .stars-img-fixed {
    width: 93px !important;
  }
}
@media (max-width: 768px) {
  .stars-img-fixed {
    width: 73px !important;
  }
}

/* Titre */
.see-it-section .title {
  font-size: 26px;
  margin-top: 0;
  margin-bottom: 6px;
}

/* Sous-titre */
.see-it-section .subtitle {
  font-size: 15px;
  color: #5a463d;
  margin-bottom: 20px;
}

/* Slider vidéo */
.video-slider {
  display: flex;
  gap: 20px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
}
.slide {
  background: white;
  border-radius: 12px;
  padding: 15px;
  width: 280px;
  flex: 0 0 auto;
  scroll-snap-align: start;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
}
.video-wrapper {
  border-radius: 8px;
  overflow: hidden;
  margin-bottom: 10px;
}
.video-wrapper video {
  width: 100%;
  height: auto;
  display: block;
}
.quote {
  font-style: italic;
  font-size: 14px;
  color: #5a463d;
}

/* Responsive */
@media (max-width: 768px) {
  .video-slider {
    padding-bottom: 10px;
  }
  .slide {
    width: 75%;
    margin-right: 10px;
  }
}
</style>
