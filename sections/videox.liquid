{% style %}
.mission-section {
  background-color: #FBF1E8;
  padding: 80px 20px;
  font-family: 'Hanken Grotesk', sans-serif;
}

.mission-container {
  display: flex;
  align-items: center;
  justify-content: center;
  max-width: 1400px;
  margin: 0 auto;
  flex-direction: row;
  gap: 60px;
}

.mission-video {
  flex: 1;
}

.mission-video video {
  width: 100%;
  border-radius: 12px;
}

.mission-text {
  flex: 1;
  text-align: left;
  color: #000;
}

.mission-text h2 {
  font-size: 36px;
  font-weight: 500;
  margin-bottom: 15px;
}

.mission-text p {
  font-size: 16px;
  margin-bottom: 20px;
}

.mission-highlight {
  font-weight: bold;
  background-color: #8F7C6D;
  color: white;
  padding: 8px 12px;
  display: inline-block;
  margin-bottom: 25px;
}

.mission-icons {
  display: flex;
  justify-content: space-between;
  gap: 20px;
  flex-wrap: wrap;
}

.mission-icon {
  text-align: center;
  flex: 1;
  min-width: 100px;
}

.mission-icon img {
  width: 40px;
  height: auto;
  margin-bottom: 10px;
}

.mission-icon span {
  font-size: 14px;
  font-weight: 500;
  color: #000;
}

@media (max-width: 768px) {
  .mission-container {
    flex-direction: column;
    text-align: center;
  }

  .mission-text h2 {
    font-size: 28px;
  }

  .mission-text p,
  .mission-icon span {
    font-size: 14px;
  }

  .mission-icons {
    flex-direction: column;
    align-items: center;
  }

  .mission-icon {
    margin-bottom: 20px;
  }
}
{% endstyle %}

