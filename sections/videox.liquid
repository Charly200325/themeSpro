{% endschema %}

{% style %}
.mission-section {
  font-family: 'Hanken Grotesk', sans-serif;
  background-color: #F9F0E7;
  padding: 60px 20px;
  text-align: left;
}

.mission-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 60px;
  max-width: 1400px;
  margin: 0 auto;
  flex-wrap: wrap;
}

.mission-video video {
  width: 400px;
  border-radius: 10px;
  height: auto;
}

.mission-content {
  max-width: 600px;
}

.mission-content h2 {
  font-size: 36px;
  font-weight: 600;
  margin: 0 0 20px;
  white-space: normal;
}

.mission-content p {
  font-size: 16px;
  color: #AD9E92;
  margin-bottom: 20px;
  line-height: 1.5;
}

.mission-highlight {
  background-color: #8F7C6D;
  color: white;
  padding: 3px 8px;
  display: inline-block;
  font-weight: 600;
  font-size: 15px;
  margin: 5px 0;
  border-radius: 4px;
}

.mission-icons {
  display: flex;
  justify-content: center;
  gap: 40px;
  flex-wrap: wrap;
  margin-top: 30px;
  text-align: center;
}

.mission-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 140px;
  text-align: center;
}

.mission-icon img {
  width: 40px;
  height: auto;
  margin-bottom: 10px;
}

.mission-icon span {
  font-size: 14px;
  font-weight: 600;
  color: #AD9E92;
}

@media (max-width: 768px) {
  .mission-section {
    text-align: center;
  }

  .mission-container {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .mission-content {
    order: 1;
  }

  .mission-video {
    order: 2;
    margin-top: 30px;
  }

  .mission-video video {
    width: 100%;
    max-width: 320px;
  }

  .mission-content h2 {
    font-size: 24px;
    line-height: 1.3;
  }

  .mission-highlight {
    font-size: 12px;
    padding: 2px 6px;
    margin: 4px 0;
  }

  .mission-icons {
    flex-direction: row;
    flex-wrap: nowrap;
    overflow-x: auto;
    justify-content: flex-start;
    gap: 20px;
    padding: 10px 0;
    margin-top: 20px;
  }

  .mission-icon {
    flex: 0 0 auto;
    width: 110px;
  }

  .mission-icon span {
    font-size: 13px;
  }
}
{% endstyle %}

