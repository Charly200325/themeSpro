{% schema %}
{
  "name": "Satisfaction Guarantee",
  "tag": "section",
  "class": "guarantee-section",
  "settings": [],
  "presets": [
    {
      "name": "Satisfaction Guarantee"
    }
  ]
}
{% endschema %}

{% style %}
.guarantee-section {
  font-family: 'Hanken Grotesk', sans-serif;
  background-color: #896E5D;
  padding: 20px 0 0;
  color: white;
  overflow: hidden;
}

.guarantee-container {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  max-width: 1400px;
  margin: 0 auto;
  gap: 60px;
  flex-wrap: nowrap;
  padding: 0 20px;
  position: relative;
}

.guarantee-text {
  text-align: center;
  flex: 1;
  padding: 80px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.guarantee-text img.icon {
  width: 60px;
  margin-bottom: 25px;
}

.guarantee-text h3 {
  font-size: 18px;
  text-transform: uppercase;
  font-weight: bold;
  margin-bottom: 15px;
  color: white;
}

.guarantee-text p {
  font-size: 16px;
  color: white;
  line-height: 1.5;
  margin-bottom: 12px;
  max-width: 500px;
}

.guarantee-text p strong {
  color: white;
}

.guarantee-image {
  flex-shrink: 0;
  margin: 0;
  align-self: flex-end;
  margin-right: -60px;
}

.guarantee-image img {
  width: 100%;
  max-width: 600px;
  display: block;
  margin: 0;
}

@media (max-width: 768px) {
  .guarantee-container {
    flex-direction: column;
    text-align: center;
    gap: 0;
    padding: 0;
  }

  .guarantee-image {
    display: block;
    text-align: center;
    margin: 0 auto;
  }

  .guarantee-image img {
    content: url('https://cdn.shopify.com/s/files/1/0964/4130/3378/files/gempages_534627086933951483-1f2932c0-3d4e-435b-8ffd-90a7cdd12713_1024x_1.webp?v=1747526271');
    width: 100%;
    max-width: none;
    height: auto;
  }

  .guarantee-text {
    background: white;
    color: #A1A09D;
    border-radius: 12px;
    padding: 30px 20px;
    margin: 0 10px 0;
  }

  .guarantee-text h3 {
    color: #8F7C6D;
  }

  .guarantee-text p,
  .guarantee-text p strong {
    color: #A1A09D;
  }

  .guarantee-text img.icon {
  display: block;
  margin-bottom: 2px;
  width: 150px;
  content: url('https://cdn.shopify.com/s/files/1/0964/4130/3378/files/25c9f06e-7d7a-4086-b1cb-16ac8c7b21a2.png?v=1747527521');
}

}
{% endstyle %}

