{% endschema %}

{% style %}
.guarantee-section {
  font-family: 'Hanken Grotesk', sans-serif;
  background-color: #8F6C4F;
  padding: 60px 20px;
  color: white;
  overflow: hidden;
}

.guarantee-container {
  display: flex;
  align-items: center;
  justify-content: center;
  max-width: 1400px;
  margin: 0 auto;
  gap: 60px;
  flex-wrap: wrap;
}

.guarantee-text-box {
  background: white;
  color: #6C574E;
  border-radius: 12px;
  padding: 40px 30px;
  max-width: 450px;
  text-align: center;
  flex: 1 1 400px;
}

.guarantee-text-box img.icon {
  width: 60px;
  margin-bottom: 25px;
}

.guarantee-text-box h3 {
  font-size: 18px;
  text-transform: uppercase;
  font-weight: bold;
  margin-bottom: 15px;
  color: #8F6C4F;
}

.guarantee-text-box p {
  font-size: 16px;
  color: #6C574E;
  line-height: 1.5;
  margin-bottom: 12px;
}

.guarantee-text-box p strong {
  color: #3D2C24;
}

.guarantee-image img {
  max-width: 550px;
  width: 100%;
  height: auto;
  display: block;
  border-radius: 0;
}

@media (max-width: 768px) {
  .guarantee-container {
    flex-direction: column;
    gap: 30px;
  }

  .guarantee-text-box {
    padding: 30px 20px;
    max-width: 100%;
  }

  .guarantee-image img {
    max-width: 400px;
  }
}
{% endstyle %}

