{% endschema %}

{% style %}
.guarantee-section {
  font-family: 'Hanken Grotesk', sans-serif;
  background-color: #896E5D;
  padding: 60px 20px;
  color: white;
  overflow: hidden;
}

.guarantee-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 1400px;
  margin: 0 auto;
  gap: 60px;
  flex-wrap: wrap;
}

.guarantee-text {
  text-align: center;
  flex: 1;
}

.guarantee-text img.icon {
  width: 60px;
  margin-bottom: 25px;
}

.guarantee-text h3 {
  font-size: 18px;
  text-transform: uppercase;
  font-weight: bold;
  margin-bottom: 15px;
  color: white;
}

.guarantee-text p {
  font-size: 16px;
  color: white;
  line-height: 1.5;
  margin-bottom: 12px;
}

.guarantee-text p strong {
  color: white;
}

.guarantee-image {
  flex-shrink: 0;
  margin: 0;
}

.guarantee-image img {
  width: 100%;
  max-width: 600px;
  display: block;
  margin: 0;
}

@media (max-width: 768px) {
  .guarantee-container {
    flex-direction: column;
    text-align: center;
    gap: 30px;
  }
  .guarantee-image {
    display: none;
  }
}
{% endstyle %}

