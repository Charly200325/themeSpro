{% schema %}
{
  "name": "Beautiful Benefits",
  "tag": "section",
  "class": "beautiful-benefits-section",
  "settings": [],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Beautiful Benefits",
      "blocks": []
    }
  ]
}
{% endschema %}

{% style %}
.beautiful-benefits-section {
  background-color: #FBF1E8;
  padding: 60px 20px;
  font-family: 'Hanken Grotesk', sans-serif;
}
.benefits-wrapper {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
  max-width: 1200px;
  margin: 0 auto;
  gap: 32px;
}
.benefits-image {
  flex: 1 1 45%;
  text-align: center;
}
.benefits-cards {
  flex: 1 1 45%;
  display: flex;
  flex-direction: column;
  gap: 20px;
}
.benefit-card {
  background-color: #AB9381;
  border-radius: 20px;
  padding: 25px;
  color: white;
  display: grid;
  grid-template-columns: 50px 1fr;
  gap: 16px;
  position: relative;
}
.benefit-card h3 {
  font-size: 15px;
  text-transform: uppercase;
  margin: 0 0 8px;
  font-weight: 800;
}
.benefit-card p {
  font-size: 15px;
  line-height: 1.5;
  margin: 0;
}
.benefit-card img {
  max-width: 50px;
}
.benefit-card::after {
  content: attr(data-number);
  position: absolute;
  top: 15px;
  right: 20px;
  color: rgba(255,255,255,0.5);
  font-weight: 800;
  font-size: 17px;
}

@media (max-width: 768px) {
  .benefits-wrapper {
    flex-direction: column;
  }
  .benefits-image {
    order: -1;
  }
  .benefits-cards {
    gap: 16px;
  }
  .benefit-card {
    grid-template-columns: 1fr;
    text-align: center;
  }
  .benefit-card img {
    margin: 0 auto 10px;
  }
  .benefit-card::after {
    right: 20px;
    top: 10px;
  }
}
{% endstyle %}

<div class="beautiful-benefits-section">
  <h2 style="text-align: center; font-size: 35px; color: #27201A;">4<br>Beautiful Benefits Youâ€™ll Love</h2>
  <div class="benefits-wrapper">
    <div class="benefits-image">
      <img src="https://cdn.shopify.com/s/files/1/0964/4130/3378/files/8fb9a7b0-b082-4582-b5d9-de206b56aa3e_preview_rev_1_1.png?v=1747257752" alt="Benefits Image" style="max-width: 100%; height: auto;">
    </div>
    <div class="benefits-cards">
      {% for block in section.blocks %}
        <div class="benefit-card" data-number="0{{ forloop.index }}">
          {% if block.settings.icon %}
            <img src="{{ block.settings.icon | image_url: width: 100 }}" alt="">
          {% endif %}
          <div>
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
