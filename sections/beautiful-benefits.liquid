{% schema %}
{
  "name": "Beautiful Benefits",
  "tag": "section",
  "class": "beautiful-benefits-section",
  "settings": [],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Beautiful Benefits",
      "blocks": []
    }
  ]
}
{% endschema %}

{% style %}
.beautiful-benefits-section {
  font-family: 'Hanken Grotesk', sans-serif;
  background-color: #FAF0E7;
  padding: 0;
  margin: 0;
}

.benefits-title {
  text-align: center;
  font-size: 35px;
  color: #27201A;
  font-weight: 600;
  padding: 60px 20px 20px;
  margin: 0 auto;
  max-width: 800px;
}

.benefits-wrapper {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px 80px;
  gap: 40px;
}

.benefits-image {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.benefits-image img {
  width: 110%;
  height: auto;
  margin-top: -80px;
  margin-left: -30px;
}

.benefits-cards {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.benefit-card {
  background-color: #AB9381;
  border-radius: 20px;
  padding: 25px;
  color: white;
  display: grid;
  grid-template-columns: 50px 1fr;
  gap: 16px;
  position: relative;
}
.benefit-card h3 {
  font-size: 15px;
  text-transform: uppercase;
  margin: 0 0 8px;
  font-weight: 800;
  color: white;
}
.benefit-card p {
  font-size: 15px;
  line-height: 1.5;
  margin: 0;
  color: white;
}
.benefit-card img {
  max-width: 40px;
}
.benefit-card::after {
  content: attr(data-number);
  position: absolute;
  top: 15px;
  right: 20px;
  color: rgba(255,255,255,0.5);
  font-weight: 800;
  font-size: 17px;
}

@media (max-width: 768px) {
  .beautiful-benefits-section {
    background-color: #FAF0E7;
  }

  .benefits-title {
    font-size: 26px;
    line-height: 1.2;
    padding: 20px 20px 10px;
  }

  .benefits-wrapper {
    flex-direction: column;
    padding: 0;
  }

  .benefits-image {
    order: -1;
    width: 100%;
    margin: 0;
  }

  .benefits-image img {
    width: 140%;
    max-width: none;
    margin: -30px 0 -10px -20%;
  }

  .benefits-cards {
    width: 100%;
    background-color: #8F7C6D;
    padding: 30px 20px;
    gap: 16px;
  }

  .benefit-card {
    background-color: #BA7A51;
    border-radius: 16px;
    padding: 20px;
    text-align: center;
    grid-template-columns: 1fr;
  }

  .benefit-card img {
    margin: 0 auto 10px;
  }

  .benefit-card::after {
    right: 15px;
    top: 10px;
  }
}
{% endstyle %}


<div class="beautiful-benefits-section">
  <h2 class="benefits-title">
    <span>4 Beautiful Benefits</span><br>
    <span>Youâ€™ll Love</span>
  </h2>
  <div class="benefits-wrapper">
    <div class="benefits-image">
      <img src="https://cdn.shopify.com/s/files/1/0964/4130/3378/files/8fb9a7b0-b082-4582-b5d9-de206b56aa3e_preview_rev_1_1.png?v=1747257752" alt="Benefits Image">
    </div>
    <div class="benefits-cards">
      {% for block in section.blocks %}
        <div class="benefit-card" data-number="0{{ forloop.index }}">
          {% if block.settings.icon %}
            <img src="{{ block.settings.icon | image_url: width: 100 }}" alt="">
          {% endif %}
          <div>
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
