{% schema %}
{
  "name": "How We Are Different",
  "tag": "section",
  "class": "comparison-table-splendor",
  "settings": [],
  "presets": [
    {
      "name": "How We Are Different",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="splendor-comparison" style="background-color: #ffffff; padding: 60px 20px;">
  <div class="comparison-wrapper" style="max-width: 1200px; margin: 0 auto;">

    <h2 style="text-align: center; font-size: 36px; color: #121212; margin-bottom: 40px;">
      Here’s How We Are Different
    </h2>

    <div class="comparison-table" style="display: grid; grid-template-columns: 40% 30% 30%; background: #fff; border-radius: 12px; overflow: hidden;">

      <!-- HEADER -->
      <div></div>
      <div style="background: #E7D9CD; text-align: center; padding: 20px;">
        <img src="https://cdn.shopify.com/s/files/1/0964/4130/3378/files/a6e1083b-fde6-4333-a241-15b664c8c320_removalai_preview.png?v=1747258252" alt="Splendor Logo" style="max-width: 90px; margin: 0 auto;">
      </div>
      <div style="text-align: center; padding: 20px;">
        <h3 style="font-size: 18px; margin: 0; font-weight: 700;">Other Brands</h3>
      </div>

      {% assign features = 
        "SEAMLESS FINISH|Invisible coverage,
         DEEP HYDRATION|HA+ Technology,
         ETHICAL BEAUTY|Ethically sourced,
         NON-COMEDOGENIC|Won’t clog pores,
         ENDURING WEAR|Stays flawless all day,
         CRUELTY-FREE & VEGAN|No animal testing,
         NO HARSH CHEMICALS|Free from parabens" | split: "," %}

      {% for feature in features %}
        {% assign parts = feature | strip | split: "|" %}
        <div style="padding: 20px; border-top: 1px solid #eee;">
          <h4 style="font-size: 16px; font-weight: 700; margin: 0 0 6px;">{{ parts[0] }}</h4>
          <p style="font-size: 13px; margin: 0; color: #555;">{{ parts[1] }}</p>
        </div>

        <!-- Splendor check -->
        <div style="display: flex; align-items: center; justify-content: center; border-top: 1px solid #eee;">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30" width="24" height="24">
            <circle cx="15" cy="15" r="13.69" fill="#FBFAF6"></circle>
            <path d="m15,29.54C6.98,29.54.46,23.02.46,15S6.98.46,15,.46s14.54,6.52,14.54,14.54-6.52,14.54-14.54,14.54Zm0-27.37C7.92,2.17,2.17,7.92,2.17,15s5.76,12.83,12.83,12.83,12.83-5.76,12.83-12.83S22.07,2.17,15,2.17Z" fill="#A29582"/>
            <polygon points="13.04 20.07 8.45 15.47 9.66 14.26 13.04 17.65 20.15 10.53 21.36 11.74 13.04 20.07" fill="#A29582"/>
          </svg>
        </div>

        <!-- Other brands cross -->
        <div style="display: flex; align-items: center; justify-content: center; border-top: 1px solid #eee;">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 49 49" width="20" height="20">
            <path d="M36.5 12.5L12.5 36.5" stroke="#000000" stroke-width="3" stroke-linecap="butt" stroke-linejoin="round"/>
            <path d="M12.5 12.5L36.5 36.5" stroke="#000000" stroke-width="3" stroke-linecap="butt" stroke-linejoin="round"/>
          </svg>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
@media (max-width: 768px) {
  .comparison-table {
    grid-template-columns: 1fr 1fr 1fr !important;
    font-size: 14px;
  }
  .comparison-table div {
    padding: 16px !important;
  }
  .comparison-table h4 {
    font-size: 14px !important;
  }
  .comparison-table p {
    font-size: 12px !important;
  }
}
</style>
